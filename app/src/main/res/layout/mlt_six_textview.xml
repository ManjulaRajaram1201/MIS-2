<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp" >

    <TextView
        android:id="@+id/mlt_txt_fullItemNo"
        style="@style/textRegular_list_body"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:gravity="center|left" >
    </TextView>

    <TextView
        android:id="@+id/mlt_txt_fullDesc"
        style="@style/textRegular_list_body"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:gravity="center|left" >
    </TextView>

    <TextView
        android:id="@+id/mlt_txt_fullLoc"
        style="@style/textRegular_list_body"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:gravity="center|left"
        android:paddingLeft="10dp" >
    </TextView>

    <TextView
        android:id="@+id/mlt_txt_fullord"
        style="@style/textRegular_list_body"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:gravity="center|left" />

    <TextView
        android:id="@+id/mlt_txt_fullrecqty"
        style="@style/textRegular_list_body"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center|left"
        android:paddingLeft="5dp" >
    </TextView>

    <TextView
        android:id="@+id/mlt_txt_fullUom"
        style="@style/textRegular_list_body"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center|left" >
    </TextView>

</LinearLayout>