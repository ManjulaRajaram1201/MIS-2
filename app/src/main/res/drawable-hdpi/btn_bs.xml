<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#1f5a69" />
             <gradient
                android:startColor="#2e6773"
                android:endColor="#2e6773"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#2e6773" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="6dp"
                android:top="5dp"
                android:right="6dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#1f5a69"
                android:endColor="#2e6773"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#2e6773" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="6dp"
                android:top="5dp"
                android:right="6dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>